
<% if user_signed_in? %>
  <div class="card">

    <h2 class="card-header">Friends</h2>
    <div class="card-body">
      <table class="table table-striped table-bordered">
        <thead class="table-dark">
          <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Phone</th>
            <th>Twitter</th>
          </tr>
        </thead>

        <tbody>
          <% @friends.each do |friend| %>
          <% if friend.user == current_user %>
          <tr>
            <td>
<%= link_to friend.first_name + ' ' + friend.last_name, friend %>
            </td>
            <td><%= friend.email %></td>
            <td><%= friend.phone %></td>
            <td><%= friend.twitter %></td>
          </tr>
          <% end %>
          <% end %>
        </tbody>
      </table>

      <br/>

      <%= link_to "New friend", new_friend_path, class:"btn btn-primary" %>
    </div>
  </div>

<% else %> 

  <h1>Hello Girls!</h1>
  This is my first Rails web page, yay!!
  
<% end %>  







